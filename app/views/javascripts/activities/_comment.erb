<div class="comment" data-editable-before="{{editable_before_msec}}" data-project="{{project_id}}" data-user="{{user_id}}" id="comment_{{id}}">
  {{#user}}
    <div class="info">
      <a href="/users/{{username}}" class="micro_avatar" style="background: url({{micro_avatar_url}}) no-repeat"></a>
    </div>
  {{/user}}
  <div class="block">
    <div class="actions_menu">
      <span class="actiondate">
        <time class="timeago" data-msec="{{created_at_msec}}" datetime="{{created_at}}" pubdate="true"></time>
      </span>
      <img alt="Triangle" class="triangle" src="/images/triangle.png">
      <div class="extra">
        <a href="/projects/earthworks/{{target_type}}s/{{target_id}}">Conversation page</a>
        <a href="/projects/earthworks/{{target_type}}s/{{target_id}}/comments/{{id}}/edit" class="edit" data-uneditable-message="Comment cannot be edited after 15 minutes" rel="facebox">Edit comment</a>
        <a href="/projects/earthworks/{{target_type}}s/{{target_id}}/comments/{{id}}" class="delete" data-confirm="Are you sure you want to delete this comment?" data-method="delete" data-remote="true">Delete</a>
      </div>
    </div>
    <div class="body textilized">
      <div class="before">
        {{#user}}
          <a href="/users/{{username}}" class="user">{{first_name}} {{last_name}}</a>
        {{/user}}
        {{{status_transition}}}
        {{#project}}
          <span class="in_project">
            in 
            <a href="/projects/{{permalink}}" class="project" target="_blank">{{name}}</a>:
          </span>
        {{/project}}
      </div>
      {{{body_html}}}
    </div>
  </div>
  <div class="clear"></div>
</div>